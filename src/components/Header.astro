<script>
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    const bars = ['bar1', 'bar2', 'bar3'].map(id => document.getElementById(id));

    menuButton.addEventListener('click', function() {
      const isHidden = menu.classList.toggle('hidden');

      // Animate hamburger to X
      bars[0].style.transform = isHidden ? 'rotate(0) translateY(0)' : 'rotate(45deg) translateY(6px)';
      bars[1].style.opacity = isHidden ? '1' : '0';
      bars[2].style.transform = isHidden ? 'rotate(0) translateY(0)' : 'rotate(-45deg) translateY(-6px)';

      // Smooth menu transition
      if (isHidden) {
        menu.style.maxHeight = '0';
        menu.style.opacity = '0';
      } else {
        menu.style.maxHeight = '500px';
        menu.style.opacity = '1';
      }
    });
  });
</script>

