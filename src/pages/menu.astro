---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import menuData from '../content/menu.json';
import reviewData from '../content/review.json';
import { timeAgo } from '../utils/dateUtils';

const title = "Menu Soto Gareng Lama";
const grabFoodUrl = "https://food.grab.com/id/id/restaurant/soto-gareng-lama-sudagaran-delivery/6-C3L1ENU3APTTNX";
const googleReviewUrl = "https://g.co/kgs/XDApvoR";
const whatsAppUrl = "";
const phoneUrl = "";
---

<BaseLayout {title}>
  <slot name="header">
    <Header />
  </slot>

  <main class="max-w-6xl mx-auto px-4 py-8 min-h-[calc(100vh-200px)]">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-[#432818] mb-2">Menu Andalan Kami</h1>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Nikmati rasa autentik Banyumas dengan bahan pilihan. 
        <span class="font-semibold text-amber-600">Harga offline lebih hemat 15-25%!</span>
      </p>
    </div>

    <!-- Price Comparison Banner -->
    <div class="bg-gradient-to-r from-amber-50 to-amber-100 border-l-4 border-amber-400 p-4 mb-8 rounded-lg flex items-start">
      <span class="text-amber-600 mr-3 text-xl">ðŸ’¡</span>
      <div>
        <h3 class="font-bold text-[#432818] mb-1">Mengapa harga berbeda?</h3>
        <p class="text-sm text-gray-700">
          Harga di GrabFood termasuk biaya layanan 15-25%. 
          <span class="font-semibold">Pesan langsung via WhatsApp/Telepon untuk harga asli warung.</span>
        </p>
      </div>
    </div>

    <!-- Menu Grid with Popup Effect -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {menuData.map((item) => {
        const onlinePrice = Math.round((item.price + 1000) * 1.25);
        const savings = onlinePrice - item.price;
        
        return (
          <div class="group relative bg-white rounded-xl shadow-md overflow-hidden transition-all duration-300 border border-gray-100 hover:border-amber-300 hover:shadow-xl hover:-translate-y-2">
            <!-- Popup Indicator -->
            <div class="absolute inset-0 bg-amber-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl z-0"></div>
            
            <!-- Highlight Border -->
            <div class="absolute inset-0 border-2 border-transparent group-hover:border-amber-400 rounded-xl pointer-events-none transition-all duration-300"></div>
            
            <div class="relative z-10">
              <img 
                src={item.picture} 
                alt={item.name}
                class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
                loading="lazy"
              />
              <div class="p-5">
                <h3 class="font-serif text-xl font-bold text-[#432818] mb-1 group-hover:text-amber-700 transition-colors">
                  {item.name}
                </h3>
                <p class="text-gray-600 text-sm mb-3 group-hover:text-gray-800 transition-colors">
                  {item.description}
                </p>
                
                <div class="space-y-2">
                  <!-- Harga Offline -->
                  <div class="flex items-center">
                    <span class="font-semibold text-green-600 group-hover:text-green-700 transition-colors">
                      Rp {item.price.toLocaleString('id-ID')}
                    </span>
                    <span class="ml-2 text-xs bg-green-100 text-green-800 px-2 py-0.5 rounded-full group-hover:bg-green-200 transition-colors">
                      Hemat Rp {savings.toLocaleString('id-ID')}
                    </span>
                  </div>
                  
                  <!-- Harga Online -->
                  <div class="flex items-center text-sm">
                    <span class="text-gray-500 mr-2 group-hover:text-gray-600 transition-colors">GrabFood:</span>
                    <span class="line-through text-gray-400 group-hover:text-gray-500 transition-colors">
                      Rp {onlinePrice.toLocaleString('id-ID')}
                    </span>
                  </div>
                </div>

                <div class="flex gap-2 mt-4 opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all duration-300">
                  <a 
                    href={grabFoodUrl} 
                    class="flex-1 text-center text-xs bg-[#00B14F] text-white px-3 py-2 rounded-lg hover:bg-[#008a3c] transition flex items-center justify-center gap-1"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M3 20.5V3.5C3 2.67 3.67 2 4.5 2H13L18 7V20.5C18 21.33 17.33 22 16.5 22H4.5C3.67 22 3 21.33 3 20.5Z"/>
                    </svg>
                    GrabFood
                  </a>
                  <a 
                    href={`${whatsAppUrl}?text=Pesan%20${encodeURIComponent(item.name)}%20Rp${item.price.toLocaleString('id-ID')}`}
                    class="flex-1 text-center text-xs bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-2 rounded-lg transition"
                  >
                    WhatsApp
                  </a>
                </div>
              </div>
            </div>
          </div>
        )
      })}
    </div>

    <!-- Google Review Section -->
    <div class="bg-white p-6 rounded-xl shadow-md mb-12">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-[#432818]">Testimoni Pelanggan</h2>
        <a href={googleReviewUrl} target="_blank" class="text-sm text-blue-600 hover:underline flex items-center">
          Lihat semua di Google
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6">
        {reviewData.map((review) => {
          const timeAgoText = timeAgo(review.date);
          
          return (
            <div class="border border-gray-200 p-4 rounded-lg">
              <div class="flex items-center mb-3">
                <div class="text-amber-400 text-xl mr-2">
                  {'â˜…'.repeat(review.rating)}{'â˜†'.repeat(5 - review.rating)}
                </div>
                <span class="font-semibold">{review.name}</span>
              </div>
              {review.comment && (
                <p class="text-gray-700 text-sm mb-2">"{review.comment}"</p>
              )}
              <span class="text-xs text-gray-500" title={review.date}>
                {timeAgoText}
              </span>
            </div>
          )
        })}
    </div>

    <!-- Dual CTA Section -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Pesan Langsung -->
      <div class="bg-[#432818] rounded-xl p-8 text-white">
        <h2 class="text-2xl font-bold mb-4">Pesan Langsung</h2>
        <p class="mb-6">Dapatkan harga asli warung tanpa biaya tambahan</p>
        <div class="space-y-3">
          <a 
            href={whatsAppUrl} 
            class="block bg-white hover:bg-gray-100 text-[#432818] px-6 py-3 rounded-full font-semibold transition text-center"
          >
            <span class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-6.29-3.429c-.545 1.492-1.189 2.925-2.365 3.047-1.165.122-2.12-.312-2.966-.92-.845-.609-1.492-1.462-2.051-2.362-.559-.9-1.15-2.608-.458-3.517.347-.453.966-.743 1.604-.743.223 0 .446.025.656.074.559.149.838.446 1.115.967.272.52.744 1.813.818 1.94.074.126.124.186.074-.26-.05-.446-.273-2.41-.385-3.007-.112-.596-.669-.991-1.189-.991-.347 0-.694.074-.992.223-.297.149-.818.52-1.04 1.49-.223.967-.26 3.225.26 4.537.52 1.313 1.764 2.975 3.045 3.826 1.282.85 2.863 1.314 3.826 1.462.966.148 2.125.074 2.966-.149.845-.223 1.786-.818 2.051-1.49.264-.67.264-1.243.198-1.49-.066-.248-.297-.372-.57-.521-.272-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.198.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347"/>
              </svg>
              Pesan via WhatsApp
            </span>
          </a>
          <a 
            href={phoneUrl}
            class="block bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-full font-semibold transition text-center"
          >
            <span class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 22.621l-3.521-6.795c-.008.004-1.974.97-2.064 1.011-2.24 1.086-6.799-7.82-4.609-8.994l2.083-1.026-3.493-6.817-2.106 1.039c-1.622.845-2.298 2.627-2.178 4.531.155 2.475 1.739 9.651 5.239 13.301 3.5 3.647 9.054 5.488 12.774 5.487h.001c.413-.003.965-.141 1.531-.346.256-.098.865-.34.865-.341l-1.389-2.637z"/>
              </svg>
              Telepon Sekarang
            </span>
          </a>
        </div>
      </div>

      <!-- Pesan Online -->
      <div class="bg-[#00B14F] rounded-xl p-8 text-white">
        <h2 class="text-2xl font-bold mb-4">Pesan Online</h2>
        <p class="mb-6">Untuk kenyamanan delivery tanpa keluar rumah</p>
        <div class="space-y-3">
          <a 
            href={grabFoodUrl}
            target="_blank"
            class="block bg-white hover:bg-gray-100 text-[#00B14F] px-6 py-3 rounded-full font-semibold transition text-center"
          >
            <span class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M10 9V5l-7 7 7 7v-4.1c5 0 8.5 1.6 11 5.1-1-5-4-10-11-11z"/>
              </svg>
              GrabFood
            </span>
          </a>
        </div>
      </div>
  </main>
</BaseLayout>

<style>
  .group:hover .group-hover\:scale-105 {
    transform: scale(1.05);
  }
  .group:hover .group-hover\:-translate-y-2 {
    transform: translateY(-0.5rem);
  }
</style>